<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/ic_baseline_close_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentDateText"
            android:gravity="center|top"
            android:text="2021년 5월 28일"
            android:textSize="20dp" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/saleInsertTableLayout"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="15dp"
            android:stretchColumns="*">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/menu_insert_shape">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="메뉴명"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="수량"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sale_save"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_shape_button"
            android:backgroundTint="@color/green2"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:paddingHorizontal="25dp"
            android:paddingVertical="4dp"
            android:layout_alignParentEnd="true"
            android:text="저장하기"/>
    </LinearLayout>
</ScrollView>